{
  "name": "bun-monorepo",
  "version": "0.0.1",
  "description": "Elysia and NextJS monorepo starter",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"cd apps/backend && bun dev\"  \"cd apps/web && bun dev\"",
    "backend": "cd apps/backend && bun dev",
    "web": "cd apps/web && bun dev",
    "typecheck": "bunx --bun tsc"
  },
  "devDependencies": {
    "concurrently": "^6.2.0"
  }
}
